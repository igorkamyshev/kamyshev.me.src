{
  "name": "kamyshev.me.src",
  "version": "2.0.0",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "dependencies": {
    "focus-visible": "^5.2.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@size-limit/file": "^5.0.1",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.4",
    "cyrillic-to-translit-js": "^3.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^2.23.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-import-helpers": "^1.1.0",
    "fs-extra": "^9.1.0",
    "jstransformer-markdown-it": "^2.1.0",
    "lint-staged": "^11.1.0",
    "marked": "^2.1.3",
    "parcel-bundler": "^1.12.5",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-nesting": "^7.0.1",
    "postcss-scrollbar": "^0.3.0",
    "prettier": "^2.3.2",
    "pug": "^3.0.2",
    "readline": "^1.3.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "size-limit": "^5.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-recommended": "^4.0.0",
    "yaspeller": "^7.0.0"
  },
  "license": "MIT",
  "repository": "git@github.com:igorkamyshev/kamyshev.me.src.git",
  "scripts": {
    "build": "rimraf .cache && rimraf dist && parcel build src/index.pug && node postparcel.js",
    "create-article": "node ./utils/create-article.js",
    "dev": "rimraf .cache && parcel src/index.pug",
    "size": "yarn build && size-limit",
    "spell": "yaspeller ./data",
    "pretty": "prettier --write .",
    "commit": "git-cz",
    "lint:code": "eslint \"./**/*.{js,jsx}\"",
    "lint:styles": "stylelint \"./**/*.css\""
  },
  "size-limit": [
    {
      "limit": "3 KB",
      "path": "./dist/interactive.*.js"
    },
    {
      "limit": "2.8 KB",
      "path": "./dist/polyfills.*.js"
    }
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "prettier --write"
    ]
  }
}
