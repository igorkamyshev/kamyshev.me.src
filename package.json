{
  "name": "kamyshev.me.src",
  "version": "2.0.0",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "dependencies": {
    "focus-visible": "^5.2.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.0.1",
    "@parcel/transformer-pug": "^2.3.1",
    "@parcel/transformer-webmanifest": "^2.0.1",
    "@size-limit/file": "^7.0.5",
    "autoprefixer": "^9.8.8",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.0",
    "jstransformer-markdown-it": "^2.1.0",
    "marked": "^4.0.12",
    "nano-staged": "^0.5.0",
    "parcel": "^2.0.1",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-nesting": "^7.0.1",
    "postcss-scrollbar": "^0.3.0",
    "prettier": "^2.5.1",
    "pug": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "size-limit": "^7.0.5",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.6.0",
    "stylelint-config-recommended": "^5.0.0",
    "yaspeller": "^8.0.0"
  },
  "license": "MIT",
  "repository": "git@github.com:igorkamyshev/kamyshev.me.src.git",
  "scripts": {
    "build": "parcel build src/index.pug",
    "dev": "parcel src/index.pug",
    "size": "yarn build && size-limit",
    "spell": "yaspeller ./data",
    "pretty": "prettier --write .",
    "lint:code": "eslint \"./**/*.{js,jsx}\"",
    "lint:styles": "stylelint \"./**/*.css\""
  },
  "size-limit": [
    {
      "limit": "3.9 KB",
      "path": "./dist/*.js"
    },
    {
      "limit": "2.6 KB",
      "path": "./dist/*.css"
    }
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "nano-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "prettier --write"
    ]
  }
}
